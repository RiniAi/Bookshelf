<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/book_challenge_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/screen_borders">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_number_books_challenge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            tools:text="12" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/iv_margin_start_book_challenge"
            android:layout_marginEnd="@dimen/iv_margin_end_book_challenge"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/tv_counter_books_challenge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            tools:text="50" />
    </LinearLayout>

    <SeekBar
        android:id="@+id/sb_counter_book_challenge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sb_padding_top_book_challenge"
        android:layout_marginBottom="@dimen/sb_padding_bottom_book_challenge"
        android:indeterminate="false"
        android:max="500" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_book_challenge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        tools:layoutManager="GridLayoutManager"
        tools:listitem="@layout/list_item_book_challenge"
        tools:spanCount="2" />
</LinearLayout>

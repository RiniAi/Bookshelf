<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/book_challenge_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_books_challenge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_primary"
        app:titleTextColor="@color/color_toolbar_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_8dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_number_books_challenge"
            android:layout_width="@dimen/padding_24dp"
            android:layout_height="wrap_content"
            tools:text="12" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/padding_128dp"
            android:paddingEnd="@dimen/padding_128dp"
            android:src="@drawable/ic_favorite_on" />

        <TextView
            android:id="@+id/tv_counter_books_challenge"
            android:layout_width="@dimen/padding_24dp"
            android:layout_height="wrap_content"
            tools:text="500" />
    </LinearLayout>

    <SeekBar
        android:id="@+id/sb_counter_book_challenge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:max="500"
        android:paddingTop="@dimen/padding_8dp"
        android:paddingBottom="@dimen/padding_8dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_book_challenge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        tools:layoutManager="GridLayoutManager"
        tools:listitem="@layout/list_item_book_challenge"
        tools:spanCount="2" />
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/screen_borders">

    <TextView
        android:id="@+id/tv_title_about_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_book" />

    <TextView
        android:id="@+id/tv_author_about_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/author_book" />

    <ImageView
        android:id="@+id/img_about_book"
        android:layout_width="@dimen/width_image_about_book"
        android:layout_height="@dimen/height_image_about_book"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rating_book" />

    <RatingBar
        android:id="@+id/rb_rating_about_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_edit_book_about_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edit_book" />

    <TextView
        android:id="@+id/tv_description_about_book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/book_description" />

</LinearLayout>
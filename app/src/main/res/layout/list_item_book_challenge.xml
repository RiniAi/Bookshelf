<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_card_book_challenge"
        android:layout_margin="@dimen/card_view_margin_list_item">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/card_view_margin_list_item"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_book_challenge"
                android:layout_width="@dimen/image_width"
                android:layout_height="@dimen/image_height"
                android:layout_gravity="center_horizontal"
                tools:src="@tools:sample/avatars" />

            <RatingBar
                android:id="@+id/tv_rating_book_challenge"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:numStars="5"
                tools:text="10" />

            <TextView
                android:id="@+id/tv_author_book_challenge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@tools:sample/full_names" />

            <TextView
                android:id="@+id/tv_title_book_challenge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_list_book_challenge"
                tools:text="Title" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>

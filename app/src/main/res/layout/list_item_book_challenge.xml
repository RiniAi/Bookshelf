<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_8dp"
    android:layout_marginTop="@dimen/margin_8dp"
    android:layout_marginEnd="@dimen/margin_8dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/fon"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_book_challenge"
                android:layout_width="@dimen/default_image_view_width"
                android:layout_height="@dimen/default_image_view_height"
                android:background="@drawable/round_outline"
                android:paddingBottom="@dimen/padding_4dp"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/tv_author_book_challenge"
                android:layout_width="@dimen/default_image_view_width"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_4dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="@tools:sample/full_names" />

            <TextView
                android:id="@+id/tv_title_book_challenge"
                android:layout_width="@dimen/default_image_view_width"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_4dp"
                android:ellipsize="end"
                android:maxLines="1"
                tools:text="Title" />

            <LinearLayout
                android:layout_width="@dimen/default_image_view_width"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_rating_book_challenge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/padding_4dp"
                    android:src="@drawable/ic_rating" />

                <TextView
                    android:id="@+id/tv_rating_book_challenge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/margin_4dp"
                    android:textSize="@dimen/text_size_medium"
                    tools:text="5" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>

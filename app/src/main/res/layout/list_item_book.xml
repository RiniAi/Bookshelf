<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_8dp"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_4dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_book_list"
                android:layout_width="@dimen/default_image_view_width"
                android:layout_height="@dimen/default_image_view_height"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/margin_8dp"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/avatars" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_title_book_list"
                        android:layout_width="@dimen/list_book_text_view_width_120"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_48dp"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold"
                        tools:text="@tools:sample/full_names" />

                    <ImageButton
                        android:id="@+id/btn_edit_book_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:drawable/ic_menu_edit" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_author_book_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    tools:text="@tools:sample/lorem" />

                <RatingBar
                    android:id="@+id/tv_rating_book_list"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    tools:text="10" />

                <RatingBar
                    android:id="@+id/tv_user_rating_book_list"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:progress="@color/color_primary_dark"
                    tools:text="10" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/padding_16dp">

                    <TextView
                        android:id="@+id/tv_status_book_list"
                        android:layout_width="@dimen/list_book_text_view_width_160"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/iv_favorite_book_list"
                        android:layout_width="@dimen/padding_24dp"
                        android:layout_height="@dimen/padding_24dp"
                        android:layout_marginStart="@dimen/margin_16dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_readData_book_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_4dp"
                        android:text="@string/list_item_book_text_view_read_data" />

                    <TextView
                        android:id="@+id/tv_read_data_book_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>

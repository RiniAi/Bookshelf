<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/book_challenge_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/bookshelf"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_progress"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:textColor="@color/color_primary_dark"
                android:textSize="18sp"
                android:layout_marginTop="240dp"
                tools:text="12" />

            <ImageView
                android:layout_width="262dp"
                android:layout_marginTop="208dp"
                android:layout_height="64dp"
                android:src="@drawable/nooks" />

            <TextView
                android:id="@+id/tv_counter"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="240dp"
                android:textColor="@color/color_primary_dark"
                android:textSize="18sp"
                tools:text="500" />
        </LinearLayout>

        <SeekBar
            android:id="@+id/sb_counter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:max="500"
            android:paddingTop="@dimen/padding_8dp"
            android:paddingBottom="@dimen/padding_8dp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_books"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        tools:layoutManager="GridLayoutManager"
        tools:listitem="@layout/list_item_book_challenge"
        tools:spanCount="2" />

    <LinearLayout
        android:id="@+id/ll_empty_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_favorite_on" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_8dp"
            android:text="@string/book_challenge_activity_list_empty"
            android:textAppearance="?android:textAppearanceSmall" />
    </LinearLayout>
</LinearLayout>


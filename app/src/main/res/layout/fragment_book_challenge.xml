<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/book_challenge_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/screen_borders">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bookchallenge" />

    <TextView
        android:id="@+id/number_books_challenge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/number_books_challenge" />

    <Button
        android:id="@+id/btn_edit_number_books"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edit_number_books" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_book_challenge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        tools:listitem="@layout/list_item_book_challenge">

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>
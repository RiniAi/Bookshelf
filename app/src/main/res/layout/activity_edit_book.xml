<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/screen_borders">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/status_edit_book" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ToggleButton
            android:id="@+id/btn_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/favorite_edit_book"
            android:background="@drawable/button_favorite"
            android:checked="false"
            android:text=""
            android:textOff=""
            android:textOn="" />

        <Spinner
            android:id="@+id/spinner_status_edit_book"
            android:layout_width="@dimen/spinner_width_status"
            android:layout_height="@dimen/spinner_height_status"
            android:layout_marginStart="@dimen/spinner_edit_book"
            android:spinnerMode="dialog" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/rating_edit_book" />

    <RatingBar
        android:id="@+id/rb_rating_edit_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:max="10"
        android:numStars="10" />

    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:calendarViewShown="false"
        android:datePickerMode="spinner" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_save_edit_book"
            android:layout_width="@dimen/btn_width_edit_book"
            android:layout_height="wrap_content"
            android:text="@string/save_edit_book" />

        <Button
            android:id="@+id/btn_delete_edit_book"
            android:layout_width="@dimen/btn_width_edit_book"
            android:layout_height="wrap_content"
            android:text="@string/delete_edit_book" />
    </LinearLayout>
</LinearLayout>

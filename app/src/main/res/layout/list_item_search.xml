<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_8dp"
    android:layout_marginTop="@dimen/margin_8dp"
    android:layout_marginEnd="@dimen/margin_8dp"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/fon"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_cover"
                android:layout_width="@dimen/default_image_view_width"
                android:layout_height="@dimen/default_image_view_height"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/round_outline"
                android:scaleType="centerCrop"
                android:paddingBottom="@dimen/padding_4dp"
                tools:src="@tools:sample/avatars" />

            <LinearLayout
                android:layout_width="@dimen/default_image_view_width"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:paddingBottom="@dimen/padding_4dp"
                    android:maxLines="1"
                    tools:text="@tools:sample/lorem" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/padding_8dp"
                    android:textStyle="bold"
                    tools:text="@tools:sample/full_names" />

                <Button
                    android:id="@+id/btn_edd"
                    android:layout_width="@dimen/default_button_width"
                    android:layout_height="@dimen/default_button_height"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/my_button_bg"
                    android:text="@string/list_item_search_add_book"
                    android:textColor="@color/fon"
                    android:textSize="@dimen/text_size_super_small" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
